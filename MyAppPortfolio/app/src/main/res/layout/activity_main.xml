<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.ramanujam.myappportfolio.MainActivity"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <Button
        style="@style/buttonTheme"
        android:text="@string/popular_movies"
        android:id="@+id/popularMoviesButton"
        android:onClick="getPopularMovies"/>

    <Button
        style="@style/buttonTheme"
        android:text="@string/stock_hawk"
        android:id="@+id/stockHawkButton"
        android:onClick="getStockHawk"/>


    <Button
        style="@style/buttonTheme"
        android:text="@string/build_it_bigger"
        android:id="@+id/buildItBiggerButton"
        android:onClick="buildItBigger"/>


    <Button
        style="@style/buttonTheme"
        android:text="@string/make_your_app_material"
        android:id="@+id/makeYourAppMaterialButton"
        android:onClick="makeYourAppMaterial"/>

    <Button
        style="@style/buttonTheme"
        android:text="@string/go_ubiquitous"
        android:id="@+id/goUbiquitousButton"
        android:onClick="goUbiquitous"/>

    <Button
        style="@style/buttonTheme"
        android:text="@string/capstone"
        android:id="@+id/capstoneButton"
        android:onClick="getCapstone"/>

</LinearLayout>
